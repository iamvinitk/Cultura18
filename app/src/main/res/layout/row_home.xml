<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/category_item_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="2dp"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >
    <ImageView
        android:id="@+id/rh_home_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="5dp"
        android:background="@drawable/misc"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/rh_home_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rh_home_image"
        android:layout_below="@+id/rh_home_image"
        android:fontFamily="sans-serif"
        android:text="Events"

        android:textAlignment="center"
        android:textSize="24sp" />
</RelativeLayout>
</android.support.v7.widget.CardView>